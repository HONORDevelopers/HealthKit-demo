<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    tools:context=".activity.HealthSignsActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_heart_health"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="starHeartHealthActivity"
        android:text="心脏健康"
        android:textAllCaps="false"
        android:background="@drawable/btn_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_stress_statistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="starStressStatistic"
        android:layout_marginTop="12dp"
        android:text="压力"
        android:textAllCaps="false"
        android:background="@drawable/btn_background"
        app:layout_constraintTop_toBottomOf="@+id/btn_heart_health"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_blood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="starBloodActivity"
        android:layout_marginTop="12dp"
        android:text="血糖"
        android:textAllCaps="false"
        android:background="@drawable/btn_background"
        app:layout_constraintTop_toBottomOf="@+id/btn_stress_statistic"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_blood_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="starBloodPressureActivity"
        android:layout_marginTop="12dp"
        android:text="血压"
        android:textAllCaps="false"
        android:background="@drawable/btn_background"
        app:layout_constraintTop_toBottomOf="@+id/btn_blood"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_blood_oxygen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startBloodOxygenActivity"
        android:layout_marginTop="12dp"
        android:text="血氧"
        android:textAllCaps="false"
        android:background="@drawable/btn_background"
        app:layout_constraintTop_toBottomOf="@+id/btn_blood_pressure"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_body_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startBodyTemperatureActivity"
        android:layout_marginTop="12dp"
        android:text="体温"
        android:textAllCaps="false"
        android:background="@drawable/btn_background"
        app:layout_constraintTop_toBottomOf="@+id/btn_blood_oxygen"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_menstrual_cycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startMenstrualCycleActivity"
        android:layout_marginTop="12dp"
        android:text="生理周期"
        android:textAllCaps="false"
        android:background="@drawable/btn_background"
        app:layout_constraintTop_toBottomOf="@+id/btn_body_temperature"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
