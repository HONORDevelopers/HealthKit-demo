<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp">

    <com.hihonor.healthkitdemo.view.CardRoundView
        android:id="@+id/card_step_daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_menstrual_cycle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日生理周期状态"
            android:textStyle="bold"
            android:textSize="16sp" />
        <LinearLayout
            android:id="@+id/layout_menstrual_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_menstrual_cycle_title"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生理状态： "
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_menstrual_cycle_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="非经期"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_menstrual_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layout_menstrual_status"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月经流量： "
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_menstrual_cycle_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_menstrual_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_menstrual_volume"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="痛经程度： "
                android:textSize="16sp" />
            <TextView
                    android:id="@+id/tv_menstrual_cycle_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轻"
                android:textSize="16sp" />
        </LinearLayout>
    </com.hihonor.healthkitdemo.view.CardRoundView>
</androidx.constraintlayout.widget.ConstraintLayout>